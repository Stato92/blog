{% extends 'base.html.twig' %}
{% block content %}
    {% for post in posts %}
    <div class="post-preview">
        <a href="{{ url('post', {post_title: post.title}) }}">
            <h2 class="post-title">
                {{ post.title }}
            </h2>
            <h3 class="post-subtitle">
                {{ post.body | truncate(300) | raw }}
            </h3>
        </a>
        <p class="post-meta">Posted by
            {{ post.author }}
            on {{ post.published|date("d M Y") }}</p>
    </div>
    <hr>
    {% endfor %}
    <!-- Pager -->
    <div class="clearfix">
        <div class="navigation">
            {{ knp_pagination_render(posts) }}
        </div>
    </div>
{% endblock %}