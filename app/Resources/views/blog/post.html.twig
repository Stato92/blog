{% extends 'base.html.twig' %}
{% block header %}

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('{{ post.img }}')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="post-heading">
                        <h1>{{ post.title }}</h1>
                        <span class="meta">Posted by
              <a href="#">{{ post.author }}</a>
              on {{ post.published|date("d M Y") }}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block content %}
    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    {{ post.body|raw }}
                </div>
            </div>
        </div>
    </article>

    <hr>
{% endblock %}