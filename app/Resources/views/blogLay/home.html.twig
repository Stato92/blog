{% extends 'blogLay/base.html.twig' %}
{% block content %}
    <!-- Page Features -->
    <div class="row text-center">
        {% for post in posts %}
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="{{ post.img }}" alt="">
                    <div class="card-body">
                        <h4 class="card-title">{{ post.title }}</h4>
                        <p class="card-text">{{ post.sumup | truncate(300) | raw }}</p>
                    </div>
                    <div class="card-footer">
                        <a href="{{ url('post', {post_title: post.title}) }}" class="btn btn-primary">Read More!</a>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
    <!-- /.row -->
    <div class="clearfix">
        <div class="navigation">
            {{ knp_pagination_render(posts) }}
        </div>
    </div>
    </div>
    <!-- /.container -->
{% endblock %}